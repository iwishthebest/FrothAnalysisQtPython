{
    "version": "0.2.0",
    "configurations": [
        {
            // 配置名称（会显示在调试面板的下拉菜单中）
            "name": "Python: 当前文件",
            // 调试类型（Python固定为"python"）
            "type": "debugpy",
            // 调试请求类型（"launch"表示启动程序，"attach"表示附加到已运行的程序）
            "request": "launch",
            // 要运行的文件路径（${file}表示当前打开的文件）
            "program": "${file}",
            // 传递给程序的命令行参数（可选）
            "args": [],
            // 是否在终端中运行（设置为true会在集成终端中显示输出）            
            "console": "integratedTerminal",
            // 指定Python解释器路径（虚拟环境需手动指定，可选）
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            // 是否只调试自己写的代码（跳过库代码，默认true）
            "justMyCode": true
        }
    ]
}